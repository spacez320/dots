# .rc
#
# Shell agnostic non-login configuration.

### General

set -o vi
PROMPT_COMMAND="history -a;"

### Sources

# RVM
if [ -f $HOME/.rvm/scripts/rvm ]; then
  . $HOME/.rvm/scripts/rvm
fi

### Aliases

alias ipext='curl -s icanhazip.com'
alias dateo='date +%Y%m%d%H%M%S'
alias rm='rm -i'
alias django='python manage.py'
alias steam='STEAM_RUNTIME=1 steam'
alias srv='python -m SimpleHTTPServer'
alias gd='git diff --full-index master HEAD'
alias gh='history -n 2> /dev/null'
alias firefox='firefox -new-window'
alias chromium='chromium --incognito'
alias nl='netstat -ltn'
alias pa='sudo puppet agent -t'
alias pen='sudo puppet agent --enable'
alias pdn='sudo puppet agent --disable'

### Functions

function pe() {
  local environment="production"
  [ -n "$1" ] && environment="$1"

  sudo puppet agent -t --environment="${environment}"
}

function pr() {
  local environment="production"
  [ -n "$1" ] && environment="$1"

  for cmd in \
    "--disable" \
    "--enable" \
    "-t --environment=${environment} ${@:2}" \
    "--disable"; do
    if "sudo ${cmd}"; then
      echo "${cmd} failed!"
      return 1
    fi
  done
}
