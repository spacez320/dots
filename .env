# .env
#
# Shell agnostic login configuration.

export EDITOR=/usr/bin/vim
export GNUPGHOME="$PRIV/.gnupg"
export GOPATH="$HOME/lib/go"
export HISTIGNORE=' *'
export PATH="$PATH:$HOME/bin:$HOME/.local/bin:$GOPATH/bin:/opt/hashicorp:/opt/erlang:/opt/amazon:/opt/helm:/opt/helmfile:/opt/helmsman"
export POWERLINE="$HOME/.local/lib/python2.7/site-packages/powerline/bindings"
export PYTHONSTARTUP="$HOME/.pythonrc"
export TZ="America/New_York"
export VAGRANT_DEFAULT_PROVIDER="virtualbox"

unset PAGER
unset RUBYOPT

for f in $HOME/.env.d/*; do [ -r $f ] && . $f; done &> /dev/null
