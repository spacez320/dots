#!/bin/bash

OBNAM_LOG=$HOME/log/obnam.log.last
OBNAM_CONFIG=$HOME/.config/obnam/local.conf

main() {
  local obnam_opts=$1

  # backup, verify, forget
  obnam --config=$OBNAM_CONFIG $obnam_opts backup && \
  obnam --config=$OBNAM_CONFIG $obnam_opts verify && \
  obnam --config=$OBNAM_CONFIG $obnam_opts forget

}

main $@ > $OBNAM_LOG
