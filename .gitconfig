[user]
  email = matthew@kronos0.net
  name = Matthew Coleman
[core]
  excludesfile = /home/mcoleman/.gitignore_global
[alias]
  d = "diff --color"
  cf = "!git add . && git commit -a --amend --no-edit"
  gp = "!source ~/.rc.d/git && gen_patch"
  rdiff = "!git fetch -qp && for b in `git for-each-ref --format='%(refname:short)' refs/heads/`; do git branch -r | grep $b | grep -v \"HEAD\"; done"
  rf = "!git stash -u && git pull --rebase origin master && git stash pop"
  ss = "stash save -u"
  slow = "!git gc && git fetch -p && git pull --rebase origin master"
[color "diff"]
  new = yellow bold
  old = magenta
